<Window x:Class="ASCIIrecipient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ASCIIrecipient"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Grid.ColumnSpan="2">
            <MenuItem Header="File">
                <MenuItem Header="Open Image" x:Name="BrowseButton" Click="BrowseButton_Click"></MenuItem>
                <MenuItem Header="Save ASCII" x:Name="SaveButton"></MenuItem>
            </MenuItem>
            <MenuItem Header="Settings" x:Name="SettingsButton" Click="SettingsButton_Click"></MenuItem>
        </Menu>
        <Image Grid.Column="0" Grid.Row="1" x:Name="SourceImage"></Image>
        <TextBlock DataContext="{Binding FontData}" Grid.Column="1" Grid.Row="1" TextWrapping="Wrap" FontSize="1" FontFamily="{Binding FontFamily}" TextAlignment="Center" x:Name="DestinationText"></TextBlock>
    </Grid>
</Window>
